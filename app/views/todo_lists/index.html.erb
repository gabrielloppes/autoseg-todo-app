<!-- Grid Warpper -->
<p id="notice"><%= notice %></p>
<div class="grid-container">
  <header class="header">
    <h1>Hello User</h1>
    <%= link_to 'New Todo List', new_todo_list_path, :class => "new-task-btn" %>
  </header>
  
  <aside class="sidenav">
    <!-- <div class="logo">
      <h1>Todo.io</h1>
    </div> -->
  </aside>
  <main class="main">
    <% @todo_lists.each do |todo_list| %>
    <div class="card-wrapper">
      <div class="card-main">
        <h2><%= todo_list.title %></h2>
        <p><%= todo_list.description %></p>
        <span><%= todo_list.created_at.strftime("%m / %d / %Y") %></span> 
        <div class="card-info">
          <%= link_to todo_list do %> 
          <i class="far fa-eye"></i>
          <% end %>
          <%= link_to edit_todo_list_path(todo_list) do %>
          <i class="far fa-edit"></i>
          <% end %> 
          <%= link_to todo_list, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </main>
</div>
