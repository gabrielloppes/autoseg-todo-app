<!-- Grid Warpper -->
<p id="notice"><%= notice %></p>

<div class="grid-container">
  <%= render 'shared/navbar' %>

  <section class="create_new">
    <h1>Hello User</h1>
    <%= link_to 'New Todo List', new_todo_list_path, :class => "new_task-btn" %>
  </section>

  <!-- Main Sewction -->
  <main class="main">
    <% @todo_lists.each do |todo_list| %>
    <div class="card-container">
      <div class="card-item">
        <div class="intro">
          <h2><%= todo_list.name %></h2>
        </div>
        <p class="description"><%= todo_list.description %></p>
        <div class="card-info">
          <%= link_to todo_list do %>
            <i class="far fa-eye"></i>
          <% end %> 
          <%= link_to edit_todo_list_path(todo_list) do %>
            <i class="far fa-edit"></i>
          <% end %> 
          <%= link_to todo_list, method: :delete, data: { confirm:
          'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </main>
</div>
